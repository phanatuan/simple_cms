<% @page_title = 'Show Page' %> 
<%= link_to "Back to Index", {action: 'index', subject_id: @subject.id} %>

<div class='panel panel-default'>
	<div class='panel-heading'>
		<h1>Show new subject</h1>
	</div>
	<div class='panel-body'>
		<%= form_for @page, :url => {action: 'show', id: @subject.id} do |f| %> 
		<%= render partial: 'form', locals: {f: f} %> 
		<div class='form-group'>
			<%= f.label :updated_at %>
			<%= f.text_field (:updated_at), class: 'form-control' %>
		</div>
		<div class='form-group'>
			<%= f.label :created_at %>
			<%= f.text_field (:created_at), class: 'form-control' %>
		</div>
		<% end %>
	</div> <!-- End of Panel Body -->
</div> <!-- End of Panel -->

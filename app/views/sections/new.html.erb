<%= link_to 'Section Index', action: 'index', page_id: @page.id %> 
<div class='panel panel-default'>
	<div class='panel-heading'>
		<h1>Create new section</h1>
	</div>
	<div class='panel-body'>
		<%= form_for @section, url: {action: 'create', id: @section.id, page_id: @page.id} do |f| %> 
		<%= render(:partial => 'form', :locals => {:f => f}) %> 
		<div>
			<%= f.submit "Create a new section", class: 'btn btn-danger' %> 
		</div>
	</div>
	<% end %> 
</div>
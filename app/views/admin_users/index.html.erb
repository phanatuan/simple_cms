<% @page_title = 'Admin Users Index' %> 
<%= link_to "Create New Admin Users", action: 'new' %> 

<table class='table table-striped table-bordered table-condensed table-hover'>
	<thead>
	<tr>
		<th>ID</th>
		<th>Full Name</th>
		<th>Email</th>
		<th>Hash Password</th>
		<th>Username</th>
		<th>Action</th>
	</tr>
	</thead>
	<tbody>
	<% @admin_users.each do |admin|  %> 
	<tr>
		<td><%= admin.id %> </td>
		<td><%= admin.full_name %> </td>
		<td><%= mail_to(admin.email) %> </td>
		<td><%= admin.hashed_password %> </td>
		<td><%= admin.username %> </td>
		<td>
			<%= link_to 'Edit | ', action:'edit', id: admin.id%> 
			<%= link_to 'Delete', action:'delete', id: admin.id%>  

		</td>
	</tr>
	<%end %>
	</tbody>
</table>